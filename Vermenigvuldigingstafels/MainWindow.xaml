<Window x:Class="Vermenigvuldigingstafels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vermenigvuldigingstafels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Achtergrond.jpg"/>
        </Grid.Background>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="400,100,0,0" VerticalAlignment="Top" Width="75" Height="25" IsDefault="True" Click="startButton_Click"/>
        <Button x:Name="clearButton" Content="Wissen" HorizontalAlignment="Left" Margin="400,150,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="clearButton_Click"/>
        <Button x:Name="closeButton" Content="Sluiten" HorizontalAlignment="Left" Margin="400,200,0,0" VerticalAlignment="Top" Width="75" Height="25" IsCancel="True" Click="closeButton_Click"/>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="102,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="260" Height="260" HorizontalContentAlignment="Right" VerticalScrollBarVisibility="Auto"/>

    </Grid>
</Window>
